<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="141dp"

            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="wrap_content"
                    android:id="@+id/tiet1"
                    android:layout_height="wrap_content"
                    android:text="haide"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tiet2"

                    android:text="haide2"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_width="wrap_content"
                android:text="salveaza"
                android:id="@+id/btn_save"
                android:layout_height="wrap_content"></Button>
            <Button
                android:layout_width="wrap_content"
                android:text="incarca"
                android:id="@+id/btn_load"
                android:layout_height="wrap_content"></Button>

        </LinearLayout>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="sterge tot" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="540dp"
            android:id="@+id/ed"
            android:focusable="false">

        </EditText>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>